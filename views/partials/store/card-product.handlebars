<div class="relative w-[200px] h-[300px] border shadow-md rounded-lg">

  <img class="absolute -z-10 w-full h-full top-0 left-0 object-contain overflow-hidden" width="200px" height="300px"
    src="{{#each this.thumbnails as |image|}}{{#if @first}}{{this}}{{/if}}{{/each}}" alt="" />

  <a href="#" class="z-0 absolute top-2 right-2 w-[45px] h-[45px] p-2 rounded-[50%] shadow-inner"
    onclick="addToCart('{{this._id}}')">
    <svg class="object-cover" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
      stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round"
        d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
    </svg>

  </a>
  <div class="flex flex-col h-full justify-end items-center p-5">
    <a href="/product/{{this._id}}">
      <h5
        class="w-fit text-gray-900 px-4 py-1 text-center bg-gray-50 border text-[10px] font-bold uppercase tracking-wide">
        {{this.title}}</h5>
    </a>
  </div>
</div>